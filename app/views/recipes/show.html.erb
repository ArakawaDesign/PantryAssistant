<h1><%= markdown(@recipe.title) %></h1>
 
<div class="row">
  <div class="col-md-8">
    <p><%= markdown(@recipe.body) %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_recipe_path(@recipe), class: 'btn btn-success' %>
    <%= link_to "Delete Post", @recipe, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this recipe?'} %>
  </div>
</div>