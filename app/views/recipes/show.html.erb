<h1><%= markdown(@recipe.title) %></h1>
 
<div class="row">
  <div class="col-md-8">
    <p><%= markdown(@recipe.body) %></p>
  </div>
  <div class="col-md-2">
    <%= link_to "Edit", edit_recipe_path(@recipe), class: 'btn btn-success' %>
    <%= link_to "Delete Post", @recipe, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this recipe?'} %>
    <%= social_share_button_tag(@recipe.title) %>
  </div>
</div>
<div class="row">
  <div>
    <h3>Comments</h3>
    <%= render @recipe.comments %>
  </div>
  <% if current_user %>
    <%= render 'comments/form', comment: Comment.new, recipe: @recipe %>
  <% end %>
</div>


<div class="row">
    <div class="col-md-8"></div>
    <div class="col-md-4">
        <%= render partial: 'converter' %>
    </div>
</div>