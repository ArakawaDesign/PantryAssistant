<h1><%= markdown(@pantry.ingredient) %></h1>
 
<div class="row">
  <div class="col-md-8">
    <%= markdown(@pantry.quantity.to_s + " " + @pantry.description) %>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_pantry_path(@pantry), class: 'btn btn-success' %>
    <%= link_to "Delete Post", @pantry, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this ingredient?'} %>
  </div>
</div>